<UserControl x:Class="DeviceControlPanel.UserControls.DeviceListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceControlPanel.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom" Grid.Column="2" FontFamily="Poppins Medium" TextDecorations="{x:Null}"/>
        <TextBlock x:Name="txtIP" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.Row="2" FontSize="9.333" Grid.Column="1" FontFamily="Poppins"/>
        <Border Height="20" Grid.RowSpan="2" Width="20" Padding="5">
            <Rectangle x:Name="statusIndicator" Fill="#FFF4F4F5" Stroke="Black" Width="10" Height="10" RadiusX="50" RadiusY="50" StrokeThickness="0"/>

        </Border>

    </Grid>
</UserControl>
